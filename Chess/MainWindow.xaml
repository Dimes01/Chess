<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fig="clr-namespace:Chess.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid Name="MainGrid" Background="DimGray">
        <fig:Desk x:Name="MainDesk" 
                  Height="{Binding ElementName=MainGrid, Path=ActualHeight}"
                  WhiteBrush="AntiqueWhite" BlackBrush="BurlyWood"/>
    </Grid>
</Window>
